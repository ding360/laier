game.Players.PlayerAdded:Connect(function(player)
    player.Chatted:Connect(function(message)
        print(player.Name .. " says: " .. message)
    end)
    game.ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("进入服务器，" .. player.Name .. "!", "All")
end)

运行
local ReplicatedStorage = game.ReplicatedStorage
local StarterGui = game.StarterGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.5, 0, 0.5, 0)
frame.Position = UDim2.new(0.25, 0, 0.25, 0)
frame魔法师Color = Color3.new(0.5, 0.5, 0.5)
frame魔法师Transparency = 0
frame魔法师Parent = StarterGui

-- 创建一个TextButton组件
local button = Instance.new("TextButton")
button.Text = "点击我！"
button.Size = UDim2.new(0.2, 0, 0.1, 0)
button.Position = UDim2.new(0.4, 0, 0.3, 0)
button魔法师Color = Color3.new(1, 0, 0)
button魔法师Transparency = 0
button魔法师Parent = frame
button魔法师Click += function()
    print("按钮被点击！")
end
